{
  "name": "duti",
  "description": "Danger UTIlities",
  "bin": {
    "duti": "bin/duti"
  },
  "version": "0.9.1",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/smartprocure/duti.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "npm t -- --watch",
    "test:ci": "npm t -- --coverage --json --outputFile=test-results.json",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:ci": "npm run lint -- -o lint-results.json -f json",
    "danger": "./bin/duti",
    "duti:fix": "npm run lint -- --fix && npm run fmt",
    "fmt": "prettier --write {*.js,{src,bin}/**/*.js} --no-semi --single-quote --trailing-comma es5"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "cosmiconfig": "^2.2.2",
    "danger": "^2.0.1",
    "futil-js": "^1.27.0",
    "lodash": "^4.17.4",
    "pkg-up": "^2.0.0",
    "strip-ansi": "^4.0.0",
    "underscore.string": "^3.3.4"
  },
  "devDependencies": {
    "eslint": "^4.3.0",
    "jest": "^20.0.4",
    "prettier": "^1.5.3"
  }
}
